<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color">
    <ImageView
        android:id="@+id/hamburger"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:padding="@dimen/_4sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/hamburger"/>
    <ImageView
        android:id="@+id/privacy_icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:padding="@dimen/_2sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/privacy_icon"/>
    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hamburger"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:fontFamily="@font/bold"
        android:textSize="@dimen/_18ssp"
        android:text="ByCoon VPN"/>
    <TextView
        android:id="@+id/main_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_title"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:fontFamily="@font/light"
        android:textSize="@dimen/_10ssp"
        android:text="connect to a secure Virtual Private Network with a single tap"/>
    <ImageView
        android:id="@+id/connect_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_description"
        app:layout_constraintDimensionRatio="H,1:0.85"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:scaleType="fitXY"
        android:src="@drawable/connect_bg"/>
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/vpn_progress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/connect_bg"
        app:layout_constraintBottom_toBottomOf="@id/connect_bg"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="H,1:1"
        app:indicatorColor="@color/indicator_color"
        app:indicatorSize="@dimen/_250sdp"
        app:indicatorTrackGapSize="0dp"
        app:trackColor="@color/track_color"
        app:trackCornerRadius="@dimen/_8sdp"
        app:trackThickness="@dimen/_6sdp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vpn_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="@id/vpn_progress"
        app:layout_constraintStart_toStartOf="@id/vpn_progress"
        app:layout_constraintTop_toTopOf="@id/vpn_progress"
        app:layout_constraintBottom_toBottomOf="@id/vpn_progress"
        android:layout_margin="@dimen/_12sdp"
        app:layout_constraintDimensionRatio="H,1:1">
        <ImageView
            android:id="@+id/vpn_button_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitCenter"
            android:src="@drawable/vpn_button_bg"/>
        <ImageView
            android:id="@+id/vpn_button_connect"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintWidth_percent="0.3"
            android:scaleType="fitCenter"
            android:src="@drawable/vpn_button_icon"/>
        <TextView
            android:id="@+id/vpn_button_disconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:includeFontPadding="false"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/medium"
            android:textSize="@dimen/_14ssp"
            android:visibility="invisible"
            android:text="Disconnect"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"/>
    <ImageView
        android:id="@+id/timer_img"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        app:layout_constraintEnd_toStartOf="@id/main_guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/connect_bg"
        android:layout_marginTop="@dimen/_12sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/timer_img"/>
    <TextView
        android:id="@+id/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/timer_img"
        app:layout_constraintStart_toStartOf="@id/timer_img"
        app:layout_constraintTop_toBottomOf="@id/timer_img"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:fontFamily="@font/medium"
        android:textSize="@dimen/_12ssp"
        android:text="00:00:00"/>
    <ImageView
        android:id="@+id/country_img"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        app:layout_constraintStart_toEndOf="@id/main_guide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/connect_bg"
        android:layout_marginTop="@dimen/_12sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/us_flag_img"/>
    <TextView
        android:id="@+id/country_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/country_img"
        app:layout_constraintStart_toStartOf="@id/country_img"
        app:layout_constraintTop_toBottomOf="@id/country_img"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:fontFamily="@font/medium"
        android:textSize="@dimen/_12ssp"
        android:text="United States"/>
</androidx.constraintlayout.widget.ConstraintLayout>
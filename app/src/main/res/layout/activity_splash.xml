<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SplashActivity"
    android:background="@color/background_color">
    <ImageView
        android:id="@+id/splash_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:0.85"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintVertical_bias="0.4"
        android:scaleType="fitCenter"
        android:src="@drawable/splash_img" />
    <ImageView
        android:id="@+id/ellipse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="@id/splash_img"
        app:layout_constraintStart_toStartOf="@id/splash_img"
        app:layout_constraintTop_toBottomOf="@id/splash_img"
        app:layout_constraintDimensionRatio="H,1:0.2"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHorizontal_bias="0.62"
        android:layout_marginTop="@dimen/_8sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/ellipse"/>
    <TextView
        android:id="@+id/splash_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ellipse"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:fontFamily="@font/bold"
        android:textSize="@dimen/_16ssp"
        android:text="ByCoon VPN"/>
    <TextView
        android:id="@+id/splash_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_title"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:fontFamily="@font/light"
        android:textSize="@dimen/_10ssp"
        android:text="connect to a secure Virtual Private Network \nwith a single tap"/>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/splash_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintVertical_bias="0.65"
        app:indicatorTrackGapSize="0dp"
        app:trackStopIndicatorSize="0dp"
        android:progress="100"
        app:indicatorColor="@color/indicator_color"
        app:trackColor="@color/icon_bg_color"
        android:max="300"/>
</androidx.constraintlayout.widget.ConstraintLayout>